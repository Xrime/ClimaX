<Page x:Class="ProjectX.Pages.ForecastWeatherPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="ForecastWeatherPage">

    <Page.Resources>
        <!-- Drop shadow to reuse -->
        <DropShadowEffect x:Key="CardShadow"
                          Color="#222"
                          BlurRadius="12"
                          ShadowDepth="4"
                          Opacity="0.22" />

        <!-- Card style for headers -->
        <Style x:Key="CardBorderStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="18"/>
            <Setter Property="Background" Value="#FFFFFFFF"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Effect" Value="{StaticResource CardShadow}"/>
        </Style>

        <!-- Content style (inside expander) -->
        <Style x:Key="ContentBorderStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Background" Value="#DDFFFFFF"/>
            <Setter Property="Padding" Value="10"/>
        </Style>
    </Page.Resources>

    <!-- Gradient background -->
    <Page.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#4facfe" Offset="0.0"/>
            <GradientStop Color="#00f2fe" Offset="1.0"/>
        </LinearGradientBrush>
    </Page.Background>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Search bar -->
        <Border Grid.Row="0" CornerRadius="24" Background="White" Padding="8"
                BorderBrush="#E6E6E6" BorderThickness="1" Margin="0,0,0,16">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="2" Opacity="0.18"/>
            </Border.Effect>

            <Grid Height="44">
                <TextBox x:Name="SearchBox"
                         BorderThickness="0"
                         Background="Transparent"
                         VerticalContentAlignment="Center"
                         FontSize="14"
                         Foreground="Black"
                         TextChanged="SearchBox_TextChanged"
                         KeyDown="SearchBox_KeyDown"
                         Margin="8,0,40,0"/>

                <!-- Placeholder (overlayed) -->
                <TextBlock x:Name="PlaceholderText"
                           Text="Search city..."
                           Foreground="#888"
                           FontSize="14"
                           VerticalAlignment="Center"
                           Margin="12,0,40,0"
                           IsHitTestVisible="False"/>

                <Image Source="pack://application:,,,/Assets/search.png"
                       Width="20" Height="20"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       Margin="0,0,10,0"
                       Cursor="Hand"
                       MouseDown="SearchIcon_MouseDown"/>
            </Grid>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <!-- City header -->
                <TextBlock x:Name="CityNameText"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,18"/>

                <!-- Hourly -->
                <TextBlock Text="Hourly Forecast"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="White"
                           Margin="0,0,0,10"/>
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" Margin="0,0,0,18">
                    <StackPanel x:Name="HourlyPanel" Orientation="Horizontal"/>
                </ScrollViewer>

                <!-- Daily -->
                <TextBlock Text="7-Day Forecast"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="White"
                           Margin="0,0,0,10"/>
                <StackPanel x:Name="DailyPanel" Orientation="Vertical"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
