<Page x:Class="ProjectX.AboutPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="About">

    <Grid Background="#F8F9FA" Margin="20">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="350">

           
            <Border Width="100" Height="100" Background="#4facfe" CornerRadius="50" Margin="0,0,0,15">
                <TextBlock Text="☀" 
                           FontSize="48" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"
                           Foreground="White"/>
            </Border>

         
            <TextBlock Text="ProjectX Weather"
                       FontSize="26"
                       FontWeight="Bold"
                       Foreground="#333"
                       TextAlignment="Center"/>

           
            <TextBlock Text="Version 1.0.0"
                       FontSize="14"
                       Foreground="Gray"
                       Margin="0,0,0,20"
                       TextAlignment="Center"/>

           
            <TextBlock Text="ProjectX Weather helps you check the latest weather forecasts, save your favorite cities, and customize your experience."
                       FontSize="14"
                       Foreground="Black"
                       TextWrapping="Wrap"
                       TextAlignment="Center"
                       Margin="0,0,0,20"/>

            
            <TextBlock Text="Developed by: Xrime"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Foreground="#4facfe"
                       TextAlignment="Center"/>

          
            <TextBlock Text="Weather data powered by OpenWeather API"
                       FontSize="12"
                       Foreground="Gray"
                       TextAlignment="Center"
                       Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Page>
